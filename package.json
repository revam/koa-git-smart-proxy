{
  "name": "koa-git-proxy",
  "version": "1.0.0",
  "description": "A proxy library for custom git deploy logic for koa.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "lint": "tsc --noEmit -p . && tslint src/**/*.ts",
    "test": "jest",
    "build": "tsc -p .",
    "pretest": "npm run lint",
    "prebuild": "npm run test",
    "prepublish": "npm run build",
    "postpublish": "del-cli lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/revam/koa-git-proxy.git"
  },
  "keywords": [
    "git",
    "push",
    "pull",
    "proxy",
    "http",
    "repository",
    "web",
    "deploy"
  ],
  "author": "Mikal Stordal <mikalstordal@gmail.com> (https://github/revam)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/revam/koa-git-proxy/issues"
  },
  "homepage": "https://github.com/revam/koa-git-proxy#readme",
  "devDependencies": {
    "@types/grunt": "^0.4.22",
    "@types/http-status": "^0.2.30",
    "@types/jest": "^22.0.0",
    "@types/koa": "^2.0.43",
    "@types/koa-send": "^4.1.1",
    "@types/node": "^8.5.2",
    "@types/through": "0.0.29",
    "del-cli": "^1.1.0",
    "jest": "^22.0.4",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "git-side-band-message": "0.0.3",
    "http-status": "^1.0.1",
    "koa-send": "^4.1.2",
    "through": "^2.3.8"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
